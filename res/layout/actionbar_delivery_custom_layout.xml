<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#f0f0f0">
    
      <!-- <RelativeLayout
        android:id="@+id/delivery_action_bar_custom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f0f0f0"> -->
         

        <RelativeLayout
            android:id="@+id/rl_action_bar_delivery_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             >

            <Button
                android:id="@+id/button_action_bar_delivery_menu"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/menu_icon_seletor" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_action_bar_delivery_waiting_todo"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="107dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:text="等待备餐"
            android:textColor="#363636"
            android:textSize="18sp" />
        
        <RelativeLayout
            android:id="@+id/button_action_bar_delivery_waiting_todo_underline"
            android:layout_width="135dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="107dp" >

            <Button
                android:layout_width="68dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_configrue_draw" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_action_bar_delivery_doing"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="272dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:text="正在备餐"
            android:textColor="#363636"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/button_action_bar_delivery_doing_underline"
            android:layout_width="135dp"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="272dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            >

            <View
                android:layout_width="68dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_configrue_draw" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_action_bar_delivery_waiting_to_delivery"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="407dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:text="等待配送"
            android:textColor="#363636"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/button_action_bar_delivery_waiting_to_delivery_underline"
            android:layout_width="135dp"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="407dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp" 
            >

            <View
                android:layout_width="68dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_configrue_draw" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_action_bar_delivery_deliverying"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
            android:layout_marginLeft="542dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:text="正在配送"
            android:textColor="#363636"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/button_action_bar_delivery_deliverying_underline"
            android:layout_width="135dp"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="542dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp" 
            >

            <View
                android:layout_width="68dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_configrue_draw"/>
        </RelativeLayout>

        <Button
            android:id="@+id/button_action_bar_delivery_done"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
            android:layout_marginLeft="679dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:text="已送达"
            android:textColor="#363636"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/button_action_bar_delivery_done_underline"
            android:layout_width="135dp"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="679dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            >

            <View
                android:layout_width="68dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_configrue_draw" />
        </RelativeLayout>

        
         <Button
            android:id="@+id/button_action_bar_delivery_search"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="107dp"
            android:textColor="#363636"
            android:textSize="18sp"
            android:text="搜索"
            android:alpha="0.5"
            android:gravity="center"
            android:layout_centerVertical="true" 
            android:background="@android:color/transparent"/>

        <RelativeLayout
            android:id="@+id/button_action_bar_delivery_search_underline"
            android:layout_width="135dp"
            android:layout_height="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="107dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            >

            <View
                android:layout_width="68dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_configrue_draw" />
        </RelativeLayout>
        
        
        
        
<!--     </RelativeLayout> -->

</RelativeLayout>
