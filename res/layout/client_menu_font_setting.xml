<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bucketInfoLayout"
     >
    
        <TextView
            android:id="@+id/textViewThemeFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="主题字体大小："
            android:textColor="#FFFFFF"    ></TextView>
    
        <EditText
            android:id="@+id/editTextThememFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:focusable="true"
            android:hint="45"
            android:inputType="number"
              ></EditText>
    
        <TextView
            android:id="@+id/textviewTipsFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="提示字体大小："
            android:focusable="true"
            android:textColor="#FFFFFF"    ></TextView>
    
        <EditText
            android:id="@+id/editTextTipsFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:hint="35"
            android:inputType="number"
               ></EditText>
        
          <TextView
            android:id="@+id/textviewNormalItemFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="菜单项目字体大小："
            android:textColor="#FFFFFF"    ></TextView>
    
        <EditText
            android:id="@+id/editTextNormalItemFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:hint="25"
            android:inputType="number"
                ></EditText>

　　</LinearLayout>
        











