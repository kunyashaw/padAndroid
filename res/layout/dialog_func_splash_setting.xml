<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_dialog_func_spalsh"
    >
    
    
     <TextView
        android:id="@+id/tv_dialog_func_splash_call_tv_ip_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_dialog_func_splash_call_tv_ip"
        android:layout_alignBottom="@+id/et_dialog_func_splash_call_tv_ip"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:text="叫号电视IP" />

    <!-- <com.shanfubaoAndroid.cutomWidget.edit_text -->
    <EditText 
        android:id="@+id/et_dialog_func_splash_call_tv_ip"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_dialog_func_splash_printer_ip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        />
    
     <TextView
        android:id="@+id/tv_dialog_func_splash_printer_ip_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_dialog_func_splash_printer_ip"
        android:layout_alignBottom="@+id/et_dialog_func_splash_printer_ip"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|left"
        android:text="后厨打印机IP" />
     
    <!-- <com.shanfubaoAndroid.cutomWidget.edit_text -->
        <EditText 
        android:id="@+id/et_dialog_func_splash_printer_ip"
        android:layout_width="180dp"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/tv_dialog_func_splash_printer_ip_tips"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/et_dialog_func_splash_call_tv_ip"
        android:layout_marginTop="30dp"
        />

   
    
    <Button
        android:id="@+id/btn_dialog_func_spalsh_enter"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dialog_func_splash_printer_ip"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="确定"
        android:background="@android:color/transparent"
        />

   


</RelativeLayout>
