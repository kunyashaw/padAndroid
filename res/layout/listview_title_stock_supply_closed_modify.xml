<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="695dp"
    android:layout_height="60dp"
    android:background="@color/Constrast"
    >

    <View
        android:layout_width="665dp"
        android:layout_height="0.5dp"
        android:background="@color/Pale"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/textview_listview_title_stock_supply_closed_modify"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:textColor="@color/Forceful"
        android:textSize="18sp"
        android:gravity="center"
        android:text="test"
        />

    <Button
        android:id="@+id/btn_listview_title_stock_supply_closed_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:text="统一修改本时段"
        />
    <View
        android:layout_width="665dp"
        android:layout_height="0.5dp"
        android:background="@color/Pale"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        />

</RelativeLayout>
