<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_launchpad_left_navigation_bar"
        android:layout_width="99dp"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="582dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:divider="@null" />


        <RelativeLayout
            android:id="@+id/relativat_layout_navigation_bar_user_info"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="128dp">

            <com.huofu.RestaurantOS.support.shapedImage.CircleImageView
                android:id="@+id/circleImageView_navigation_now_login_user_head"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/textview_navigation_bar_now_login_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/circleImageView_navigation_now_login_user_head"
                android:layout_marginTop="6dp"
                android:alpha="0.6"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_navigation_bar_exit"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="31dp">

            <ImageView
                android:id="@+id/imageview_navigation_bar_exit"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/icon_exit" />

            <TextView
                android:id="@+id/textview_navigation_bar_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_navigation_bar_exit"
                android:layout_marginTop="6dp"
                android:alpha="0.6"
                android:gravity="center_horizontal"
                android:text="点击退出"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_launchpad_left_navigation_gridview"
        android:layout_width="925dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/rl_launchpad_left_navigation_bar"
        android:background="@drawable/right_launchpad">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="#000000" />

        <GridView
            android:id="@+id/gridview_dialog_show_all_func"
            android:layout_width="747dp"
            android:layout_height="698dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="89dp"
            android:layout_marginTop="35dp"
            android:horizontalSpacing="104dp"
            android:numColumns="5" />

    </RelativeLayout>

</RelativeLayout>