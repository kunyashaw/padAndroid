<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:background="#b0000000" >

	<RelativeLayout 
	    android:layout_width="557dp"
	    android:layout_height="301dp"
	    android:layout_centerInParent="true"
	    android:background="@drawable/popup_window" >
	    
	    <TextView
	        android:id="@+id/tv_dialog_error_content"
	        android:layout_width="465dp"
	        android:layout_height="wrap_content"
	        android:lines="3"
	        android:textSize="18sp"
	        android:textColor="@color/Forceful"
	        android:gravity="center"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="65dp"
	        android:layout_centerHorizontal="true"
	        />
	    
	    
	    
	    <Button
	        android:id="@+id/btn_dialog_error_close"
	        android:layout_width="194dp"
	        android:layout_height="48dp"
	        android:textSize="18sp"
	        android:textColor="@color/Constrast"
	        android:text="关闭"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="46dp"
	        android:layout_marginBottom="43dp"
	        android:gravity="center"
	        android:background="@drawable/btn_red_solid"
	        />
	    
	    
	    <Button
	        android:id="@+id/btn_dialog_error_sure"
	        android:layout_width="194dp"
	        android:layout_height="48dp"
	        android:textSize="18sp"
	        android:textColor="@color/Constrast"
	        android:text="重试"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="46dp"
	        android:layout_marginBottom="43dp"
	        android:gravity="center"
	        android:background="@drawable/btn_blue_solid"
	        />
	</RelativeLayout>
</RelativeLayout>
