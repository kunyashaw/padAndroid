<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_aciton_bar_stock_supply"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#f0f0f0">


    <RelativeLayout
        android:id="@+id/rl_action_bar_stock_supply_menu"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        >

        <Button
            android:id="@+id/button_action_bar_stock_supply_menu"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/menu_icon_seletor" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_action_bar_stock_supply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_action_bar_stock_supply_menu"
        android:layout_marginLeft="-10dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:text="8 月11 日 星期二"
        android:textColor="#363636"
        android:textSize="18sp"
        android:drawableRight="@drawable/arrow_down"
        android:drawablePadding="10dp"
        />



    <Button
        android:id="@+id/button_action_bar_stock_supply_normal"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:text="非周期库存"
        android:textColor="#363636"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/button_action_bar_stock_supply_normal_underline"
        android:layout_width="135dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >

        <View
            android:layout_width="68dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_configrue_draw" />
    </RelativeLayout>


    <Button
        android:id="@+id/button_action_bar_stock_supply_fixed"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_action_bar_stock_supply_normal"
        android:layout_marginRight="60dp"
        android:alpha="0.5"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:text="周期库存"
        android:textColor="#363636"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/button_action_bar_stock_supply_fixed_underline"
        android:layout_width="135dp"
        android:layout_height="3dp"
        android:layout_toLeftOf="@id/button_action_bar_stock_supply_normal_underline"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >

        <View
            android:layout_width="68dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_configrue_draw" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_action_bar_stock_supply_closed"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_stock_supply_normal_underline"
        android:layout_marginLeft="60dp"
        android:alpha="0.5"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:text="未开启库存"
        android:textColor="#363636"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/button_action_bar_stock_supply_closed_underline"
        android:layout_width="135dp"
        android:layout_height="3dp"
        android:layout_toRightOf="@id/button_action_bar_stock_supply_normal_underline"
        android:layout_marginLeft="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >

        <View
            android:layout_width="68dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_configrue_draw"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_action_bar_stock_supply_refresh"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        >

        <Button
            android:id="@+id/button_action_bar_stock_supply_refresh"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/refresh"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


</RelativeLayout>
