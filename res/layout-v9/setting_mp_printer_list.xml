<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		 android:layout_width="630dp"
         android:layout_height="60dp"
         android:background="#ffffff">
         
    <ImageView
        android:id="@+id/imageview_setting_mp_printer_loading_whether_right"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        />
    
    <TextView
        android:id="@+id/textview_setting_mp_printer_info"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="#565656"
        android:text="测试内容 192.168.1.1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="46dp"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:id="@+id/tv_setting_mp_printer_cant_connect"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/textview_setting_mp_printer_info"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        android:gravity="left|center_vertical"
        />


    <Button 
        android:id="@+id/button_setting_mp_printer_edit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="编辑"
        android:textSize="18sp"
        android:textColor="@color/Blue"
        android:background="@android:color/transparent"
        />
    
     <View
        android:layout_width="match_parent" 
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:background="#dddddd"
        android:layout_alignParentBottom="true"
        />
    

</RelativeLayout>
