<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="630dp"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_setting_call_rule_auto_call"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:background="#ffffff"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageview_setting_mp_call_rule_auto"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textview_setting_mp_call_rule_auto"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="46dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:background="#dddddd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_call_rule_manual_call"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/rl_setting_call_rule_auto_call"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageview_setting_mp_call_rule_manual"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textview_setting_mp_call_rule_manual"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="46dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:background="#dddddd" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_setting_call_rule_last_call"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/rl_setting_call_rule_manual_call"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageview_setting_mp_call_rule_last"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textview_setting_mp_call_rule_last"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="46dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:background="#dddddd" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*自动打印出餐单时,一律不自动叫号\n*批量打印出餐单时,一律不自动叫号"
        android:layout_below="@id/rl_setting_call_rule_last_call"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="52dp"
        />


</RelativeLayout>
