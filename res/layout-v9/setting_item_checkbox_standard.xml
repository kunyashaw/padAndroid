<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="690dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_setting_layout_checkbox_standard_item"
        android:layout_width="630dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_setting_layout_checkbox_standard_item_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#363636"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageview_setting_layout_checkbox_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <View
            android:id="@+id/view_setting_meal_port"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="#ffffff"/>

        <ImageView
            android:id="@+id/iv_setting_meal_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


</RelativeLayout>
